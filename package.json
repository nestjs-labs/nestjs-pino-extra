{
  "name": "@nestjs-labs/pino-extra-monorepo",
  "private": true,
  "description": "NestJS Labs pino extra monorepo",
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "build": "turbo build",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "turbo format",
    "typedoc": "typedoc",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish -r --access public",
    "release:dry-run": "changeset version && changeset publish --dry-run --access public"
  },
  "keywords": [
    "nestjs",
    "pino",
    "logging",
    "opentelemetry",
    "loki",
    "file-rotation"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nestjs-labs/nestjs-pino-extra.git"
  },
  "author": "NestJS Labs AB",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nestjs-labs/nestjs-pino-extra/issues"
  },
  "homepage": "https://nestjs-labs.github.io/nestjs-pino-extra",
  "docs": "https://nestjs-labs.github.io/nestjs-pino-extra",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "nestjs-pino": "^4.4.0",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "pino-loki": "^2.6.0",
    "pino-pretty": "^13.0.0",
    "pino-std-serializers": "^7.0.0",
    "rotating-file-stream": "^3.2.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@nestjs-labs/eslint-config": "^1.0.3",
    "@nestjs/config": "^4.0.2",
    "changeset": "^0.2.6",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "tslib": "^2.8.0",
    "turbo": "^2.5.5",
    "typedoc": "^0.28.7",
    "typescript": "^5.5.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
