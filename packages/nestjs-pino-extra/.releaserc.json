{
  "branches": ["main", "next"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          {
            "message": "*\\[python\\]*",
            "release": false
          },
          {
            "type": "chore",
            "message": "*version*",
            "release": "patch"
          },
          {
            "type": "chore",
            "message": "*dependencies*",
            "release": "patch"
          },
          {
            "type": "chore",
            "message": "*eslint*",
            "release": "patch"
          },
          {
            "type": "chore",
            "message": "*TypeScript*",
            "release": "patch"
          },
          {
            "type": "chore",
            "message": "*package.json*",
            "release": "patch"
          },
          {
            "type": "docs",
            "message": "*README*",
            "release": "patch"
          },
          {
            "type": "chore",
            "message": "*config*",
            "release": "patch"
          }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@anolilab/semantic-release-pnpm",
      {
        "npmPublish": true,
        "tarballDir": "dist"
      }
    ],
    "@semantic-release/github",
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
