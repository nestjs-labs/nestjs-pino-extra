{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "lib/**", ".next/**", "!.next/cache/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "format": {
      "outputs": [],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "semantic-release": {
      "dependsOn": ["build", "test"],
      "outputs": [],
      "cache": false
    },
    "typedoc": {
      "dependsOn": ["build"],
      "outputs": ["_docs/**", "docs/**"],
      "cache": true
    },
    "dry-run": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false
    }
  }
}
